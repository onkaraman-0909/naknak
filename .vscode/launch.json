    "version": "0.2.0",
    "configurations": [
        {
            "name": "FastAPI (Uvicorn) - 8001",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "justMyCode": true,
            "args": [
                "app.main:app",
                "--reload",
                "--port",
                "8001"
            ],
            "cwd": "${workspaceFolder}",
            "envFile": "${workspaceFolder}/.env",
            "console": "integratedTerminal"
        },
        {
            "name": "FastAPI (Uvicorn) - 8000",
